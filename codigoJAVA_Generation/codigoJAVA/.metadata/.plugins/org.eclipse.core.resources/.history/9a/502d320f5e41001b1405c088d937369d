package lojaNova;

import java.util.Scanner;
import java.util.ArrayList;
import java.util.List;

public class testeLoja {
	
	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		
		//cliente fregues = new cliente("Joao", );
		
		//usar uma interface
		List<Produto> prodlista = new ArrayList<>();
		
		prodlista.add(new Produto("pacote push pop","BEST-001",50.25));
		prodlista.add(new Produto("CALÇA JEAN","BEST-002",80.00));
		prodlista.add(new Produto("CAMISETA","BEST-003",20.00));
//pacote push pop","pacote balas caramelizadas","pacote tortilhas doces","pacote tortilhas salgadas","pacote balas amargas","pacote balas de coco","pacote pão de mel","pacote bala caramelo","pacote baton maluco","pacote moedas de chocolate"};
		
		System.out.println("PRODUTOS PARA COMPRA");
		System.out.println("CODIGO\t\tPRODUTO\t\t\tVALOR UNITARIO");
		for (Produto visao : prodlista) 
		{
			System.out.println(visao.getcodigoProduto()+"\t"+visao.getNomeProduto()+"\t\t"+visao.getPrecoUnitario());
		}
	}
}
